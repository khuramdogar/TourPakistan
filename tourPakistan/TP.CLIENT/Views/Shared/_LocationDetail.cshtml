@model TP.Models.WebModels.LocationModel


<div class="cbp-l-project-title">@Model.LocationName</div>
<div class="cbp-l-project-subtitle">@Model.AreaName</div>

<div class="cbp-slider">
    <ul class="cbp-slider-wrap">
        @foreach (var image in Model.LocationImages)
        {
            <li class="cbp-slider-item">
                <img src="@image.ImageBase64" alt="">
            </li>
        }
    </ul>
</div>

<div class="cbp-l-project-container">
    <div class="cbp-l-project-desc">
        <div class="cbp-l-project-desc-title"><span>Location Description</span></div>
        <div class="cbp-l-project-desc-text">@Model.LocationDescription</div>
    </div>
    <div class="cbp-l-project-details">
        <div class="cbp-l-project-details-title"><span>Location Details</span></div>

        <ul class="cbp-l-project-details-list">
            <li><strong>Title</strong>@Model.LocationName</li>
            <li><strong>Date Added</strong>@Model.RecLastUpdatedDate.ToString("dd MMM yyyy")</li>
            <li><strong>Categories</strong>@Model.CategoryName</li>
        </ul>
        <a href="@Url.Action("Index","Event")" class="cbp-l-project-details-visit btn btn-sm c-btn-border-1x c-btn-square c-btn-dark c-btn-uppercase c-btn-bold">View Events</a> 
    </div>
</div>

